# G3pix AxonASP Server Configuration
# Copy this file to .env in the project root and configure as needed

# Server Port (default: 4050)
SERVER_PORT=4050

# Web Root Directory (default: ./www)
WEB_ROOT=./www

# Timezone (default: America/Sao_Paulo)
TIMEZONE=America/Sao_Paulo

# Default Page (default: default.asp)
DEFAULT_PAGE=default.asp

# Script Execution Timeout in seconds (default: 30)
SCRIPT_TIMEOUT=30

# Enable Debug Mode for ASP Parser
# When set to TRUE, each ASP/VB parse error, notice, and warning will be logged to console
# This includes detailed error information and line numbers
# Default: FALSE
DEBUG_ASP=FALSE

# SMTP Configuration for Mail Library (G3MAIL)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=password
# SMTP_FROM=noreply@example.com
