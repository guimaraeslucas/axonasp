# Server Configuration (Test Ambient - DONT USE IN PRODUCTION)
SERVER_PORT=4050
#WEB_ROOT=./www/QuickerSite-test/
#WEB_ROOT=./www/asplite-test/
WEB_ROOT=./www/
TIMEZONE=America/Sao_Paulo
DEFAULT_PAGE=default.asp
SCRIPT_TIMEOUT=30
# Blocked extensions - prevents direct user access to restricted file types
# Comma-separated list, extensions must include the dot (.)
BLOCKED_EXTENSIONS=.asax,.ascx,.master,.skin,.browser,.sitemap,.config,.cs,.csproj,.vb,.vbproj,.webinfo,.licx,.resx,.resources,.mdb,.vjsproj,.java,.jsl,.ldb,.dsdgm,.ssdgm,.lsad,.ssmap,.cd,.dsprototype,.lsaprototype,.sdm,.sdmDocument,.mdf,.ldf,.ad,.dd,.ldd,.sd,.adprototype,.lddprototype,.exclude,.refresh,.compiled,.msgx,.vsdisco,.rules,.asa,.inc,.exe,.dll,.env,.config,.htaccess,.env.local,.json,.yaml,.yml
# 404 Error Handling Mode
# default: Use static HTML error page from errorpages/404.html
# IIS: Read web.config from www/web.config and use custom error handler path
ERROR_404_MODE=IIS
# Mail Library Configuration (Example)
# Replace with your actual SMTP details
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
SMTP_FROM=sender@example.com
# Enable Debug Mode for ASP Parser
# When set to TRUE, each ASP/VB parse error, notice, and warning will be logged to console
# This includes detailed error information and line numbers
# Default: FALSE
DEBUG_ASP=TRUE
# Session cleanup on startup (TRUE or FALSE)
CLEAN_SESSIONS=TRUE
# AST cache type
# memory: in-memory only
# disk: in-memory + on-disk cache at temp/cache/ast/
ASP_CACHE_TYPE=disk
# AST cache TTL in minutes (0 keeps forever). When > 0, cache is cleared on shutdown.
ASP_CACHE_TTL_MINUTES=0
# Enable the experimental VM (TRUE or FALSE)
AXONASP_VM=FALSE
# VM bytecode cache type
# memory: in-memory only
# disk: in-memory + on-disk cache at temp/cache/bytecode/
VM_CACHE_TYPE=disk
# VM bytecode cache TTL in minutes (0 keeps forever). When > 0, cache is cleared on shutdown.
VM_CACHE_TTL_MINUTES=0
# Memory limit (MB). Set 0 to disable.
MEMORY_LIMIT_MB=0
# COM provider selection for Access OLEDB
# auto: choose provider based on process architecture
# code: keep provider string from ASP code
COM_PROVIDER=auto
# MySQL Database Configuration (G3DB)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASS=
MYSQL_DATABASE=test
# PostgreSQL Database Configuration (G3DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASS=
POSTGRES_DATABASE=test
POSTGRES_SSLMODE=disable
# MS SQL Server Database Configuration (G3DB)
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASS=
MSSQL_DATABASE=test
# SQLite Database Configuration (G3DB)
SQLITE_PATH=./database.db
#Example to request from ASP code value from .env
API_KEY=your_api_key_here
#SQL Tracing Configuration
SQL_TRACE=FALSE