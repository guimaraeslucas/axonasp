<%@ Language=VBScript %>
<!DOCTYPE html>
<html>
<head><title>Basic Date Test</title></head>
<body>
    <h1>Basic Date Functions Test</h1>
    <p>Now(): [<%= Now() %>]</p>
    <p>Date(): [<%= Date() %>]</p>
    <p>Time(): [<%= Time() %>]</p>
    <p>Timer(): [<%= Timer() %>]</p>
    <p>Day(Now): [<%= Day(Now()) %>]</p>
    <p>Hour(Now): [<%= Hour(Now()) %>]</p>
    <p>Minute(Now): [<%= Minute(Now()) %>]</p>
    <p>Second(Now): [<%= Second(Now()) %>]</p>
</body>
</html>
